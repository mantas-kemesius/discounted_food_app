        <li class="active menu__item menu__item--current"><a class="menu__link" href="index.html">Home <span class="sr-only">(current)</span></a></li>
        <li class=" menu__item"><a class="menu__link" href="{{ path('about') }}">About</a></li>
        <li class="menu__item dropdown">
            <a class="menu__link" href="#" class="dropdown-toggle" data-toggle="dropdown">Suppliers <b class="caret"></b></a>
            <ul class="dropdown-menu agile_short_dropdown">
                <li><a href="icons.html">Maxima</a></li>
                <li><a href="typography.html">Can can</a></li>
            </ul>
        </li>
    </ul>
{% endblock %}

{% block index_page %}
    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <div class="container">
                    <div class="carousel-caption">
                        <h3>The Biggest <span>Sale</span></h3>
                        <p>Special for today</p>
                        <br>
                        <button class="btn hvr-outline-out button2" onclick="getLocation()">Show in the map </button>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block body %}
    <h3 class="wthree_text_info">News <span>Feed</span></h3>
    <div id="horizontalTab">
        <div class = "row">
            <div class = "col-md-12 col-sm-2 text-center">

            </div>
            <div class="resp-tabs-container">

                <div class="col-sm-4 col-md-4 col-lg-4 mt-4 product-men">
                    <div class="card">
                        <img class="card-img-top" src="https://static.pexels.com/photos/70497/pexels-photo-70497.jpeg">
                        <div class="card-block text-center">
                            <h4 class="card-title mt-3">Food name</h4>
                            <div class="meta">
                                <a>Supplier name</a>
                            </div>
                            <div class="card-text">
                                About food
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <small>Collection time today: <strong>17:00 - 18:00</strong></small>
                        </div>
                        <div class="card-footer text-center">
                            <small>Left: <strong>3</strong> portions for: <strong><span class="item_price">$3.99</span></strong></small>
                            <button style = "color:white;" class="btn snipcart-details top_brand_home_details item_add single-item hvr-outline-out button2">SHOW IN THE MAP</button>
                        </div>
                    </div>
                </div>

                <div class="clearfix"></div>
            </div>
        </div>
    </div>
{% endblock %}